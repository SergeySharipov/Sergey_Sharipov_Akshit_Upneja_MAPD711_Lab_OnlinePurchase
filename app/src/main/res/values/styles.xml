<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button_press_effect</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomOvalButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_oval_button_press_effect</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

</resources>
